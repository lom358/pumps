%h1 Список категорий насосов
%table.table
  %tr
    %th Название
    %th Назначение
    %th Прилагаемая фотография
    %th
    %th
    %th

  - @pump_categories.each do |category|
    %tr
      %td= category.title
      %td= category.appointment
      %td
        = image_tag(category.photo(:medium))
      %td= link_to 'Просмотреть', [:admin, category]
      %td= link_to 'Редактировать', edit_admin_pumps_category_path(category)
      %td= link_to 'Удалить', [:admin, category], :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br

= link_to 'Добавить +', new_admin_pumps_category_path, :class=>'btn btn-default btn-primary', :style=>'color:white'
