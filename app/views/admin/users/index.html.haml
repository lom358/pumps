%h1 Список пользователей
%table.table
  %tr
    %th Email
    %th Login
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.email
      %td= user.login
      %td= link_to 'Просмотреть', [:admin, user]
      %td= link_to 'Редактировать', edit_admin_user_path(user)
      %td= link_to 'Удалить', [:admin, user], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Добавить +', new_admin_user_path, :class=>'btn btn-default btn-primary', :style=>'color:white'
