= form_for([:admin, @type_material]) do |f|
  - if @type_material.errors.any?
    #error_explanation
      %h2= "#{pluralize(@type_material.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @type_material.errors.full_messages.each do |msg|
          %li= msg

  .col-md-12
    .col-md-4
    .col-md-4
      .form-group
        = f.label :name
        = f.text_field :name, :class=>'form-control'
      .form-group
        = f.label :code
        = f.text_field :code, :class=>'form-control'

      .actions
        = f.submit 'Сохранить', :class=>'btn btn-default btn-success'
    .col-md-4

